<% form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@venue.errors.count, "error") %>
        prohibited this event from being saved:
      </h2>
      <ul>
        <% venue.errors.full.messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </div>
  <div class="field">
    <%= f.label :artist %><br>
    <%= f.text_field :artist %><br>
  </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.date_select :date %><br>
  </div>
  <div class="field">
    <%= f.label :time %><br>
    <%= f.datetime_select :time %><br>
  </div>
<% end %>